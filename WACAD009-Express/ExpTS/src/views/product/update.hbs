<div class="d-flex justify-content-between align-items-center">
  <h1>Atualizar Produto</h1>
  <a class="btn btn-dark" href="/product" role="button">
    <i class="bi bi-arrow-left"></i>
  </a>
</div>

<form id="updateProductForm">
  <div class="mb-3">
    <label for="id" class="form-label">ID</label>
    <input
      type="text"
      class="form-control"
      id="id"
      name="id"
      value="{{product.id}}"
      readonly
      disabled
    />
  </div>
  <div class="mb-3">
    <label for="name" class="form-label">Nome</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="{{product.name}}"
      required
    />
  </div>
  <div class="mb-3">
    <label for="price" class="form-label">Pre√ßo</label>
    <input
      type="number"
      class="form-control"
      id="price"
      name="price"
      value="{{product.price}}"
      required
    />
  </div>
  <div class="mb-3">
    <label for="stock" class="form-label">Quantidade</label>
    <input
      type="number"
      class="form-control"
      id="stock"
      name="stock"
      value="{{product.stock}}"
      required
    />
  </div>
  <button type="submit" class="btn btn-primary">Atualizar</button>
</form>
<script src="/js/updateProduct.js"></script>