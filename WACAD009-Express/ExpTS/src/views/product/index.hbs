<div class="d-flex justify-content-between align-items-center">
  <h1>Listagem de Produtos</h1>
  <a class="btn btn-dark" href="/product/create" role="button">
    <i class="bi bi-plus-lg"></i>
  </a>
</div>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th scope="col" class="text-center">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Preço</th>
      <th scope="col">Quantidade</th>
      <th scope="col" class="text-center">Opções</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr>
        <th style="width: 50px" class="text-center" scope="row">{{add1
            @index
          }}</th>
        <td>{{name}}</td>
        <td style="width: 100px">{{price}}</td>
        <td style="width: 100px">{{stock}}</td>
        <td style="width: 200px" class="text-center">
          <div class="d-flex justify-content-center gap-3">
            <a href="/product/{{id}}">
              <i class="bi bi-eye-fill text-black"></i>
            </a>
            <a href="/product/update/{{id}}">
              <i class="bi bi-pencil-fill text-black"></i>
            </a>
            <a href="/product/delete/{{id}}">
              <i class="bi bi-trash-fill text-black"></i>
            </a>
          </div>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>